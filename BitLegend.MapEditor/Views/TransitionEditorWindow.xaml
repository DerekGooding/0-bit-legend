<Window x:Class="_0_bit_legend.MapEditor.Views.TransitionEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0_bit_legend.MapEditor.Views"
        xmlns:viewmodels="clr-namespace:_0_bit_legend.MapEditor.ViewModels"
        xmlns:controls="clr-namespace:_0_bit_legend.MapEditor.Controls"
        mc:Ignorable="d"
        Title="Transition Editor" Height="700" Width="400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type controls:NumericUpDown}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <viewmodels:TransitionEditorViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Map ID + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Start X + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Start Y + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Direction Type + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Size X + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Size Y + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Position X + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Position Y + Error -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Map ID -->
        <Label Grid.Row="0" Grid.Column="0" Content="Map ID:"/>
        <ComboBox x:Name="MapIdComboBox" Grid.Row="0" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding ValidMapIds}"
                  SelectedItem="{Binding Transition.MapId, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=MapIdComboBox, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=MapIdComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Start Position X -->
        <Label Grid.Row="2" Grid.Column="0" Content="Start Position X:"/>
        <controls:NumericUpDown x:Name="StartPositionXNumericUpDown" Grid.Row="2" Grid.Column="1" Margin="5"
                                Value="{Binding Transition.StartPositionX, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="0"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=StartPositionXNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=StartPositionXNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Start Position Y -->
        <Label Grid.Row="4" Grid.Column="0" Content="Start Position Y:"/>
        <controls:NumericUpDown x:Name="StartPositionYNumericUpDown" Grid.Row="4" Grid.Column="1" Margin="5"
                                Value="{Binding Transition.StartPositionY, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="0"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=StartPositionYNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=StartPositionYNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Direction Type -->
        <Label Grid.Row="6" Grid.Column="0" Content="Direction Type:"/>
        <ComboBox x:Name="DirectionTypeComboBox" Grid.Row="6" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding ValidDirectionTypes}"
                  SelectedItem="{Binding Transition.DirectionType, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Grid.Row="7" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=DirectionTypeComboBox, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=DirectionTypeComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Size X -->
        <Label Grid.Row="8" Grid.Column="0" Content="Size X:"/>
        <controls:NumericUpDown x:Name="SizeXNumericUpDown" Grid.Row="8" Grid.Column="1" Margin="5"
                                Value="{Binding Transition.SizeX, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="1"/>
        <TextBlock Grid.Row="9" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=SizeXNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=SizeXNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Size Y -->
        <Label Grid.Row="10" Grid.Column="0" Content="Size Y:"/>
        <controls:NumericUpDown x:Name="SizeYNumericUpDown" Grid.Row="10" Grid.Column="1" Margin="5"
                                Value="{Binding Transition.SizeY, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="1"/>
        <TextBlock Grid.Row="11" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=SizeYNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=SizeYNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Position X -->
        <Label Grid.Row="12" Grid.Column="0" Content="Position X:"/>
        <controls:NumericUpDown x:Name="PositionXNumericUpDown" Grid.Row="12" Grid.Column="1" Margin="5"
                                Value="{Binding Transition.PositionX, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="0"/>
        <TextBlock Grid.Row="13" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=PositionXNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=PositionXNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Position Y -->
        <Label Grid.Row="14" Grid.Column="0" Content="Position Y:"/>
        <controls:NumericUpDown x:Name="PositionYNumericUpDown" Grid.Row="14" Grid.Column="1" Margin="5"
                                Value="{Binding Transition.PositionY, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="0"/>
        <TextBlock Grid.Row="15" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=PositionYNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=PositionYNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <StackPanel Grid.Row="17" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="75" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="75" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>