<Window x:Class="_0_bit_legend.MapEditor.Views.EntityEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_0_bit_legend.MapEditor.Views"
        xmlns:viewmodels="clr-namespace:_0_bit_legend.MapEditor.ViewModels"
        xmlns:controls="clr-namespace:_0_bit_legend.MapEditor.Controls"
        mc:Ignorable="d"
        Title="Entity Editor" Height="400" Width="400"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <Style TargetType="{x:Type TextBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type ComboBox}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="{x:Type controls:NumericUpDown}">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip" Value="{Binding RelativeSource={RelativeSource Self}, Path=(Validation.Errors)[0].ErrorContent}"/>
                    <Setter Property="BorderBrush" Value="Red"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <viewmodels:EntityEditorViewModel/>
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Entity Type + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- X Position + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Y Position + Error -->
            <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <!-- Condition + Error -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Entity Type -->
        <Label Grid.Row="0" Grid.Column="0" Content="Entity Type:"/>
        <ComboBox x:Name="EntityTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding ValidEntityTypes}"
                  SelectedItem="{Binding Entity.EntityType, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Grid.Row="1" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=EntityTypeComboBox, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=EntityTypeComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- X Position -->
        <Label Grid.Row="2" Grid.Column="0" Content="X Position:"/>
        <controls:NumericUpDown x:Name="XPositionNumericUpDown" Grid.Row="2" Grid.Column="1" Margin="5"
                                Value="{Binding Entity.X, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="0"/>
        <TextBlock Grid.Row="3" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=XPositionNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=XPositionNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Y Position -->
        <Label Grid.Row="4" Grid.Column="0" Content="Y Position:"/>
        <controls:NumericUpDown x:Name="YPositionNumericUpDown" Grid.Row="4" Grid.Column="1" Margin="5"
                                Value="{Binding Entity.Y, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"
                                Minimum="0"/>
        <TextBlock Grid.Row="5" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=YPositionNumericUpDown, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=YPositionNumericUpDown, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- Condition -->
        <Label Grid.Row="6" Grid.Column="0" Content="Condition:"/>
        <TextBox x:Name="ConditionTextBox" Grid.Row="6" Grid.Column="1" Margin="5"
                 Text="{Binding Entity.Condition, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnDataErrors=True}"/>
        <TextBlock Grid.Row="7" Grid.Column="1" Margin="5,0,5,0" Foreground="Red" FontSize="10"
                   Text="{Binding Path=(Validation.Errors)[0].ErrorContent, ElementName=ConditionTextBox, FallbackValue=''}"
                   Visibility="{Binding Path=(Validation.HasError), ElementName=ConditionTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <StackPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Save" Width="75" Margin="5" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="75" Margin="5" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>